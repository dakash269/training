import java.util.*;
import java.lang.*;
import java.io.*;
class Ideone
{
	public static void main (String[] args) throws java.lang.Exception
	{
	Scanner sc=new Scanner(System.in);
	int n=sc.nextInt();
	int i=0;
	int a[]=new int[n];
	         while(n>=1)
	         {
	         a[i]= n%2;
	         n=n/2;
	         i++;
	         }
	      int count=i;
	      int b[]=new int[count];
	      for(int j=0;j<count;j++)
	      {
	      	b[j]=a[count-1-j];
	        System.out.print(b[j]);
	      }
	}
}
